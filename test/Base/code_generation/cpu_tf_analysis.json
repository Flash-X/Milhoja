{
    "format": ["Milhoja-native JSON", "1.0.0"],
    "task_function": {
        "name": "cpu_tf_analysis",
        "language": "C++", 
        "argument_list": ["tile_gridIndex",
                          "tile_lo",
                          "tile_hi",
                          "tile_xCenters",
                          "tile_yCenters",
                          "CC_1"],
        "argument_specifications": {
            "tile_gridIndex":   {"source":           "tile_gridIndex"},
            "tile_lo":          {"source":           "tile_lo"},
            "tile_hi":          {"source":           "tile_hi"},
            "tile_xCenters":    {"source":           "tile_coordinates",
                                 "axis":             "I",
                                 "edge":             "center",
                                 "lo":               "tile_lo",
                                 "hi":               "tile_hi"},
            "tile_yCenters":    {"source":           "tile_coordinates",
                                 "axis":             "J",
                                 "edge":             "center",
                                 "lo":               "tile_lo",
                                 "hi":               "tile_hi"},
            "CC_1":             {"source":           "grid_data",
                                 "type":             "real",
                                 "extents_in":       "(10, 18, 1, 2)",
                                 "lbound_in":        "(tile_lbound, 1)",
                                 "structure_index": ["CENTER", 1]}
        },
        "subroutine_call_stack": [
            "Analysis::computeErrors"
        ]
    },
    "device": {
        "hardware":        "CPU",
        "byte_alignment":     -1
    },
    "subroutines": {
        "Analysis::computeErrors": {
            "header_file": "Analysis.h",
            "argument_list": ["lo",
                              "hi",
                              "xCoords",
                              "yCoords",
                              "U",
                              "idx"],
            "argument_mapping": {
                "lo":      "tile_lo",
                "hi":      "tile_hi",
                "xCoords": "tile_xCenters",
                "yCoords": "tile_yCenters",
                "U":       "CC_1",
                "idx":     "tile_gridIndex"
            }
        }
    }
}
