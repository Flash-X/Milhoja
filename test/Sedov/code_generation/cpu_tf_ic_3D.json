{
    "format": ["Milhoja-native JSON", "1.0.0"],
    "task_function": {
        "name": "cpu_tf_ic",
        "language": "C++", 
        "argument_list": ["tile_level",
                          "tile_lbound",
                          "tile_ubound",
                          "tile_deltas",
                          "tile_xCenters",
                          "tile_yCenters",
                          "tile_zCenters",
                          "CC_1"],
        "argument_specifications": {
