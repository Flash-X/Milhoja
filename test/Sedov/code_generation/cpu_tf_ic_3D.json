        },
        "Eos::idealGammaDensIe": {
            "header_file": "Eos.h",
            "argument_list": ["lo",
                              "hi",
                              "solnData"],
            "argument_mapping": {
                "lo":       "tile_lbound",
                "hi":       "tile_ubound",
                "solnData": "CC_1"
            }
