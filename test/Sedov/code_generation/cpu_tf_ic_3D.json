                "lo":       "tile_lbound",
                "hi":       "tile_ubound",
                "level":    "tile_level",
                "xCoords":  "tile_xCenters",
                "yCoords":  "tile_yCenters",
                "zCoords":  "tile_zCenters",
                "deltas":   "tile_deltas",
                "solnData": "CC_1"
