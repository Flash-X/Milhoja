SHELL=/bin/sh

# TODO: Redo this with more care.  Make certain that template .h/.cpp dependencies are correct

BASE         = test_runtime_cpp
MAKEFILE     = Makefile_runtime_cpp
BASEDIR      = ../..
INCDIR       = $(BASEDIR)/includes
SRCDIR       = $(BASEDIR)/src
TESTBASEDIR  = $(BASEDIR)/test/Base
TESTDIR      = $(BASEDIR)/test/Runtime
AMREXDIR     = $(HOME)/local/gcc_7.1.0/amrex_2d
GTESTDIR     = $(HOME)/local/gcc_7.1.0/googletest

# Common files
CXX_HDRS   = \
    $(INCDIR)/Grid.h \
    $(INCDIR)/Tile.h \
    $(INCDIR)/runtimeTask.h \
    $(INCDIR)/ThreadTeamModes.h \
    $(INCDIR)/ThreadTeam.h \
    $(INCDIR)/ThreadTeamState.h \
    $(INCDIR)/ThreadTeamIdle.h \
    $(INCDIR)/ThreadTeamTerminating.h \
    $(INCDIR)/ThreadTeamRunningOpen.h \
    $(INCDIR)/ThreadTeamRunningClosed.h \
    $(INCDIR)/ThreadTeamRunningNoMoreWork.h \
    $(INCDIR)/OrchestrationRuntime.h \
    $(TESTBASEDIR)/initTile_cpu.h \
    $(TESTBASEDIR)/computeLaplacianDensity_cpu.h \
    $(TESTBASEDIR)/computeLaplacianEnergy_cpu.h \
    $(TESTBASEDIR)/scaleEnergy_cpu.h \
    $(TESTBASEDIR)/Analysis.h \
    $(TESTDIR)/Flash.h \
    $(TESTDIR)/constants.h
SRCS       = \
    $(SRCDIR)/Grid.cpp \
    $(SRCDIR)/Tile.cpp \
    $(SRCDIR)/OrchestrationRuntime.cpp \
    $(TESTBASEDIR)/initTile_cpu.cpp \
    $(TESTBASEDIR)/computeLaplacianDensity_cpu.cpp \
    $(TESTBASEDIR)/computeLaplacianEnergy_cpu.cpp \
    $(TESTBASEDIR)/scaleEnergy_cpu.cpp \
    $(TESTBASEDIR)/Analysis.cpp \
    $(TESTDIR)/testRuntimeInt.cpp \
    $(TESTDIR)/testRuntimeTile.cpp \
    $(TESTDIR)/runRuntimeCppTest.cpp

OBJS      = $(addsuffix .o, $(basename $(SRCS)))
COMMAND   =  $(BASE).x

CXX       = mpic++
CXXFLAGS  = -g -O0 -std=c++11 -I$(INCDIR) -I$(TESTBASEDIR) -I$(TESTDIR) -I$(AMREXDIR)/include -I$(GTESTDIR)/include
CXXWARNS  =

LIBS      = -lpthread -lstdc++ -lgfortran -lamrex -lgtest
LDFLAGS   = -L$(AMREXDIR)/lib -L$(GTESTDIR)/lib64

ifdef DEBUG
CXXFLAGS := $(CXXFLAGS) -DDEBUG_RUNTIME
endif

all:    $(COMMAND)

.SUFFIXES:
.SUFFIXES: .o .cpp

$(COMMAND): $(OBJS) $(MAKEFILE) 
	$(CXX) -o $(COMMAND) $(OBJS) $(LDFLAGS) $(LIBS)

.cpp.o: $(CXX_HDRS) $(MAKEFILE)
	$(CXX) -c $(CXXFLAGS) $(CXXWARNS) -o $@ $<

clean:
	/bin/rm -f $(COMMAND)
	/bin/rm -f Test*.log
	/bin/rm -f $(SRCDIR)/*.o
	/bin/rm -f $(TESTBASEDIR)/*.o
	/bin/rm -f $(TESTDIR)/*.o

