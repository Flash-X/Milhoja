# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines
# a newline at the EOF
# utf-8 encoding
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{py,F90,cpp,h,cu,json}]
indent_style = space
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab

